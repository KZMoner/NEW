@model Registration
@{
    ViewData["Title"] = "Registration";
}
 <style>.form-box {
    background: #fff;
    padding: 25px 30px;
    border-radius: 10px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
}

.form-box h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
}

.form-box label {
    font-size: 14px;
    color: #555;
}

.form-box input {
    width: 100%;
    padding: 8px;
    margin: 6px 0 15px 0;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.form-box input:focus {
    border-color: #6a82fb;
    outline: none;
}

.form-box button {
    width: 100%;
    padding: 10px;
    border: none;
    background: #6a82fb;
    color: white;
    font-size: 16px;
    border-radius: 5px;
}

.form-box button:hover {
    background: #5a72e8;
}
</style>
<div class="container">
    <div class="row justify-content-center align-items-center"
         style="min-height: calc(100vh - 80px);">

        <div class="col-md-6 col-lg-5">
            <div class="form-box">

                <h2>Registration Form</h2>

                <form   asp-action="Registertion" method="post">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Full Name</label>
                            <input type="text" asp-for="Name" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Username</label>
                            <input type="text" asp-for="Username" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Department</label>
                            <input type="text"asp-for="Department" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Father's Name</label>
                            <input type="text" asp-for="FatherName" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Gmail</label>
                            <input type="email"
                                   placeholder="example@gmail.com"
                                   pattern="[a-zA-Z0-9._%+-]+gmail\.com"
                                   required
                                   asp-for="Gmail"
                                   >
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Password</label>
                            <input type="password" asp-for="Password" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Retype Password</label>
                            <input type="password" asp-for="ConfirmPassword" required>
                        </div>
                    </div>

                    <button type="submit">Register</button>

                </form>

            </div>
        </div>

    </div>
</div>

